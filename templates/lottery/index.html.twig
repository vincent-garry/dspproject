{% extends 'base.html.twig' %}

{% block title %}Loterie{% endblock %}

{% block meta_description %}Page permettant de rentrer le code pour le concours Thé Tip Top{% endblock %}
{% block meta_keywords %}Lotterie, Code, Concours, Thé, Thé Tip Top{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mb-4 fs-1 fw-semibold pt-5 pb-5">Tentez votre chance !<br>Entrez votre code</h1>
        <form action="{{ path('app_lottery_submit') }}" method="post" class="form-lottery shadow-none f-box-col gap-5">
            <input type="text" name="code" class=" form-control form-control-lg text-center" placeholder="Votre code ici" required>
            <button type="submit" class="btn btn-blue rounded-pill"><p class="text-white">Valider</p></button>
        </form>
    </div>
{% endblock %}