{% extends 'base.html.twig' %}

{% block title %}Liste des emails{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des emails</h1>

        <div class="card mb-4">
            {{ form_start(form, {'attr': {'class': 'form-inline'}}) }}
            <div class="f-box gap-2">
                {{ form_widget(form.recipient, {'attr': {'class': 'form-control w-75', 'placeholder': 'Filtrer par destinataire'}}) }}
                <button type="submit" class="btn btn-darkblue w-25 text-white">
                    <i class="fas fa-search"></i> Filtrer
                </button>
            </div>
            {{ form_end(form) }}
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Expéditeur</th>
                        <th>Destinataire</th>
                        <th>Sujet</th>
                        <th>Envoyé</th>
                        <th>Créer à</th>
                        <th>Délivrer à</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for email in emails %}
                    <tr>
                        <td>{{ email.id }}</td>
                        <td>{{ email.from }}</td>
                        <td>{{ email.to }}</td>
                        <td>{{ email.subject }}</td>
                        <td>
                            <span class="badge badge-{{ email.send ? 'success' : 'warning' }}">
                                {{ email.send ? 'Sent' : 'Pending' }}
                            </span>
                        </td>
                        <td>{{ email.createdAt|date('Y-m-d H:i:s') }}</td>
                        <td>{{ email.deliveredAt ? email.deliveredAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        <td>
                            <a href="{{ path('app_email_preview', {'id': email.id}) }}" class="btn btn-sm btn-info" target="_blank">
                                <i class="fas fa-eye"></i> Preview
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center">Aucun email trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}