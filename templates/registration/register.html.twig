{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h2>Inscription</h2>
    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.email) }}
    {{ form_row(registrationForm.password) }}
    {{ form_row(registrationForm.firstName) }}
    {{ form_row(registrationForm.lastName) }}
    {{ form_row(registrationForm.gender) }}
    {{ form_row(registrationForm.birthdate) }}
    {{ form_row(registrationForm.address) }}
    <hr>
    <button type="submit" class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}
    <hr>
    <div class="social-login">
        <a href="{{ path('connect_google_start') }}" class="btn btn-primary">S'inscrire avec Google</a>
        <a href="{{ path('connect_facebook_start') }}" class="btn btn-primary">S'inscrire avec Facebook</a>
    </div>
    <p>Déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></p>
{% endblock %}