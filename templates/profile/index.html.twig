{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
{% endblock %}

{% block body %}
    <h1 class="mb-4 fs-2 fw-semibold pt-5 pb-5">Mon profil</h1>

    <div class="profile-info">
        <div class="row">
            <div class="col-md-3 text-center">
                <img src="{{ asset('images/default-avatar.png') }}" alt="Avatar" class="profile-avatar mb-3">
            </div>
            <div class="col-md-9">
                <h2>{{ app.user.firstName }} {{ app.user.lastName }}</h2>
                <p>Date de naissance : {{ app.user.birthdate ?: 'Non renseignée' }}</p>
                <p>Genre : {% if app.user.gender == "male" %} Homme {% elseif app.user.gender == "female" %} Femme {% elseif app.user.gender == "other" %} Autre {% else %} Ne souhaite pas répondre {% endif %}</p>
                <p>Adresse : {{ app.user.address }}</p>
                <p>Nombre de gains : {{ app.user.codes|length }}</p>

                <button id="edit-button" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Modifier
                </button>
            </div>
        </div>
    </div>

    {{ form_start(form, {'attr': {'id': 'edit-form'}}) }}
    <div class="mt-3">
        {{ form_row(form.firstName) }}
        {{ form_row(form.lastName) }}
        {{ form_row(form.birthdate) }}
        {{ form_row(form.gender) }}
        {{ form_row(form.address) }}
    </div>
    <button type="submit" class="btn btn-success mt-3">Enregistrer les modifications</button>
    {{ form_end(form) }}

    <h2 class="mb-4 fs-2 fw-semibold pt-5 pb-5">Mes gains</h2>
    {% if app.user.codes is empty %}
        <p>Vous n'avez pas encore de gains.</p>
    {% else %}
        <div class="d-flex flex-column align-items-center justify-content-center gap-5 prize-grid">
            <div class="d-flex align-items-center justify-content-center gap-5 w-100 flex-wrap">
                {% for prize in app.user.codes %}
                    <div class="card card-prize card-bg-{{ prize.delivry  ? '1' : '0  zoom-1-1' }}">
                        <div class="card p-2 border-0">
                            <img src="{{ asset('images/' ~ prize.prize ~ '.jpg' ) }}" class="card-img-top" alt="{{ prize.prize }}">
                            {# {% if prize.rank %}
                                <div class="rotate-90-deg card-rank card-rank-{{ prize.rank }} rounded-circle d-flex align-items-center justify-content-center">{{ prize.rank }}</div>
                            {% endif %} #}
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{ prize.prize }}</h5>
                            <p class="card-text">Code : {{ prize.code }}</p>
                            <p class="card-text p-delivered">
                                {% if prize.delivry == true %}
                                    Produit récupéré
                                {% else %}
                                    Produit non récupéré
                                {% endif %}
                            </p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script>
        $(document).ready(function() {
            $(".datepicker").datepicker({
                dateFormat: 'dd/mm/yy',
                changeMonth: true,
                changeYear: true,
                yearRange: "-100:+0"
            });

            $("#edit-button").click(function() {
                $("#edit-form").toggle();
            });
        });
    </script>
{% endblock %}