{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
    {{ form_start(form, {'attr': {'id': 'edit-form'}}) }}
    <div class="profile-info">
        <div class="row">
            <div class="col-md-3 text-center">
                <img src="{{ asset('images/default-avatar.png') }}" alt="Avatar" class="profile-avatar mb-3">
            </div>
            <div class="col-md-9">
                <h2>
                    <span id="name-display">{{ app.user.firstName }} {{ app.user.lastName }}</span>
                    <i class="fas fa-edit edit-icon" onclick="toggleEdit('name')"></i>
                </h2>
                <div id="name-edit" class="edit-form">
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                </div>

                <p>
                    Date de naissance :
                    <span id="birthdate-display">
                    {% if app.user.birthdate %}
                        {{ app.user.birthdate }}
                    {% else %}
                        Non renseign√©e
                    {% endif %}
                    </span>
                    <i class="fas fa-edit edit-icon" onclick="toggleEdit('birthdate')"></i>
                </p>
                <div id="birthdate-edit" class="edit-form">
                    {{ form_row(form.birthdate) }}
                </div>

                <p>
                    Genre : <span id="gender-display">{{ app.user.gender }}</span>
                    <i class="fas fa-edit edit-icon" onclick="toggleEdit('gender')"></i>
                </p>
                <div id="gender-edit" class="edit-form">
                    {{ form_row(form.gender) }}
                </div>

                <p>
                    Adresse : <span id="address-display">{{ app.user.address }}</span>
                    <i class="fas fa-edit edit-icon" onclick="toggleEdit('address')"></i>
                </p>
                <div id="address-edit" class="edit-form">
                    {{ form_row(form.address) }}
                </div>

                <p>Nombre de gains : {{ app.user.codes|length }}</p>
            </div>
        </div>
    </div>

    <button type="submit" id="save-changes" class="btn btn-primary mt-3">Enregistrer les modifications</button>
    {{ form_end(form) }}

    {# ... le reste de votre template ... #}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function toggleEdit(field) {
            const displayEl = document.getElementById(`${field}-display`);
            const editEl = document.getElementById(`${field}-edit`);
            const saveButton = document.getElementById('save-changes');

            if (editEl.style.display === 'none') {
                displayEl.style.display = 'none';
                editEl.style.display = 'block';
                saveButton.style.display = 'block';
            } else {
                displayEl.style.display = 'inline';
                editEl.style.display = 'none';
            }
        }
    </script>
{% endblock %}