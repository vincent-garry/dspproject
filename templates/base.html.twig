            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-main">
            <div class="container-fluid">
                {# Logo #}
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <img src="{{ asset('images/Logo.svg') }}" alt="Logo du site Thé Tip Top" class="navbar-logo">
                </a>

                {# Boutons de connexion et d'inscription #}
                {% if app.user %}
                <div class="navbar-avatar ">
                    <a href="{{ path('app_profile') }}" class="d-flex flex-column align-items-center gap-1">
                        <div class = "bg-white justify-content-center rounded-circle navbar-avatar-div">
                            <img src="{{ asset('images/Avatar.svg') }}" alt="Avatar de l'utilisateur" class="navbar-avatar-img rounded-circle">
                        </div>
                        <p class="fw-semibold text-white">Youssef AZIZ</p>
                    </a>
                </div>
                {% else %}
                    <div class="d-flex align-items-center">
                        <a href="{{ path('app_login') }}" class="btn btn-success me-2 rounded-pill navbar-btn text-center" style="background-color: #8bc34a;">
                            <p class="d-flex align-items-center h-100 justify-content-center">Connexion</p>
                        </a>
                        <a href="{{ path('app_register') }}" class="btn btn-info rounded-pill navbar-btn text-center" style="background-color: #5D92AD;">
                            <p class="d-flex align-items-center h-100 justify-content-center">Inscription</p>
                        </a>
                    </div>
                {% endif %}

            </div>
        </nav>

        {# {% if app.user %} #}
            {# Sous-menu vert #}
            <div class="submenu">
                <ul class="nav justify-content-evenly h-100">
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link fs-2 fw-semibold text-black link-primary" href="{{ path('app_my_prizes') }}"><p>Mes gains</p></a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link fs-2 fw-semibold text-black link-primary" href="{{ path('app_profile') }}"><p>Mon Profil<p></a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link fs-2 fw-semibold text-black link-primary" href="{{ path('app_logout') }}"><p>Déconnexion</p></a>
                    </li>
                </ul>
            </div>
        {# {% endif %} #}

        <main class="container mt-4">
            {% block body %}{% endblock %}
